<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="album"
    type="com.example.recordshopapp.model.Album" />
    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/aqua"
        app:cardCornerRadius="20dp"
        app:contentPadding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{album.title}"
            android:textColor="@color/neon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="Title" />

        <TextView
            android:id="@+id/artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{album.artist.name}"
            android:textColor="@color/neon"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            tools:text="Artist" />

        <TextView
            android:id="@+id/genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{album.genre}"
            android:textColor="@color/neon"
            app:layout_constraintTop_toBottomOf="@id/artist"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            tools:text="genre"  />

        <TextView
            android:id="@+id/release_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{album.releaseYear}"
            android:textColor="@color/neon"
            app:layout_constraintTop_toBottomOf="@id/genre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            style="@style/TextAppearance.MaterialComponents.Overline"
            tools:text="release_year" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"Â£" + String.valueOf(album.price)}'
            android:textColor="@color/neon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle1"
            tools:text="price"/>


        <TextView
            android:id="@+id/stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{"Stock:" + String.valueOf(album.stock)}'
            android:textColor="@color/neon"
            app:layout_constraintTop_toBottomOf="@id/price"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            style="@style/TextAppearance.MaterialComponents.Subtitle2"
            tools:text="stock"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>